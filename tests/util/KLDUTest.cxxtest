        // means and std deviations of the Gaussians
        const double m1 = 1.0, s1 = 10.0,
            m2 = 2.0, s2 = 5.0;
        
        // according to that website http://allisons.org/ll/MML/KL/Normal/
        double expected_res =
            (sq(m1 - m2) + sq(s1) - sq(s2)) / (2 * sq(s2)) + log(s2/s1);

