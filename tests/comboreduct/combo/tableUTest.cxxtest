#include <opencog/comboreduct/combo/table.h>
#include <boost/assign/list_of.hpp>

using namespace opencog;
using namespace combo;
using namespace std;
using namespace boost::assign;

class tableUTest : public CxxTest::TestSuite {
private:
    void testIStreamBooleanTable(const string& ts,
                                 const truth_table_inputs& it,
                                 const partial_truth_table& ot) {
        stringstream ss(ts);
        truth_table_inputs it_test;
        partial_truth_table ot_test;
        istreamTable<truth_table_inputs,
                     partial_truth_table, bool>(ss, it_test, ot_test);
        TS_ASSERT_EQUALS(it, it_test);
        TS_ASSERT_EQUALS(ot, ot_test);
    }
public:
    void test_SSVTruthTable() {
        truth_table_inputs it;
        bool_vector r1 = list_of(true)(false);
        bool_vector r2 = list_of(false)(true);
        it.push_back(r1);
        it.push_back(r2);
        bool_vector o = list_of(true)(false);
        partial_truth_table ot(o);
        testIStreamBooleanTable("1 0 1\n0 1 0\n", it, ot);
    }
};
