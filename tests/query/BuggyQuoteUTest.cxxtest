#include <opencog/guile/load-file.h>
#include <opencog/guile/SchemeEval.h>
#include <opencog/guile/SchemeSmob.h>
#include <opencog/atomspace/AtomSpace.h>
#include <opencog/server/CogServer.h>
#include <opencog/query/BindLink.h>
#include <opencog/util/Config.h>
#include <opencog/util/Logger.h>

using namespace opencog;

class BuggyQuoteUTest: public CxxTest::TestSuite
{
private:
        AtomSpace *as;
        SchemeEval* eval;

public:
    BuggyQuoteUTest(void)
    {
        try
        {
             config().load("opencog-test.conf");
        }
        catch (RuntimeException &e)
        {
            std::cerr << e.getMessage() << std::endl;
        }
        logger().setFilename(config()["LOG_FILE"]);
        logger().setLevel(Logger::getLevelFromString(config()["LOG_LEVEL"]));
        logger().setPrintToStdoutFlag(config().get_bool("LOG_TO_STDOUT"));

        server(CogServer::createInstance);
        as = &cogserver().getAtomSpace();
        eval = new SchemeEval(as);

        config().set("MODULES",
            "opencog/query/libQueryModule.so");

        cogserver().loadModules();
    }

    ~BuggyQuoteUTest()
    {
        delete as;
        // Erase the log file if no assertions failed.
        if (!CxxTest::TestTracker::tracker().suiteFailed())
                std::remove(logger().getFilename().c_str());
    }

    void setUp(void);
    void tearDown(void);

    void test_quote(void);
};

void BuggyQuoteUTest::tearDown(void)
{
    as->clear();
}

void BuggyQuoteUTest::setUp(void)
{
    as->clear();
    config().set("SCM_PRELOAD",
        "opencog/atomspace/core_types.scm, "
        "opencog/scm/utilities.scm");

    load_scm_files_from_config(*as);
}


/*
 * BuggyQuote unit test.  Test binding to unquoted links.
 * This test explicitly tests the bug described in 
 * https://github.com/opencog/opencog/issues/1092
 * The old pattern matcher would crash with a null-pointer deref.
 * The current one works great.
 */
void BuggyQuoteUTest::test_quote(void)
{
    logger().debug("BEGIN TEST: %s", __FUNCTION__);

    config().set("SCM_PRELOAD", "tests/query/buggy-crime.scm");
    load_scm_files_from_config(*as);

    Handle qrule = eval->eval_h("query_rule");

    Handle lily = bindlink(as, qrule);
    logger().debug() << "Result is this:\n" << lily->toString();

    TS_ASSERT_EQUALS(1, as->getArity(lily));
}

